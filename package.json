{
  "name": "pattyshack",
  "version": "1.0.0",
  "description": "Restaurant Operations Platform",
  "main": "src/server/index.js",
  "scripts": {
    "dev": "concurrently \"npm:dev:server\" \"npm:dev:client\"",
    "dev:server": "nodemon src/server/index.js",
    "dev:client": "npm run dev --prefix frontend",
    "build": "npm run build --prefix frontend",
    "start": "npm run build --prefix frontend && node src/server/index.js",
    "test": "NODE_ENV=test jest"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "pg": "^8.16.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.2.0",
    "jest": "^30.2.0",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.4",
    "vite": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
