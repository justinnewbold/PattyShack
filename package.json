{
  "name": "pattyshack",
  "version": "1.0.0",
  "description": "Restaurant Operations Platform - Multi-location task management, temperature monitoring, inventory control, and analytics",
  "main": "src/server/index.js",
  "scripts": {
    "start": "node src/server/index.js",
    "dev": "nodemon src/server/index.js",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "test:integration": "NODE_ENV=test jest tests/integration",
    "test:unit": "NODE_ENV=test jest tests/unit",
    "db:setup": "docker-compose up -d && echo 'Waiting for database...' && sleep 3",
    "db:stop": "docker-compose down",
    "db:reset": "docker-compose down -v && docker-compose up -d && sleep 3",
    "db:test:setup": "docker-compose -f docker-compose.test.yml up -d && echo 'Waiting for test database...' && sleep 3",
    "db:test:stop": "docker-compose -f docker-compose.test.yml down"
  },
  "keywords": [
    "restaurant",
    "operations",
    "task-management",
    "inventory",
    "temperature-monitoring",
    "scheduling",
    "analytics",
    "haccp",
    "multi-location"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
