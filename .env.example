# PattyShack Environment Configuration
# Copy this file to .env and update with your values

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration
DB_DIALECT=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pattyshack
DB_USER=pattyshack_user
DB_PASSWORD=your_secure_password
DB_SSL=false

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# CORS Configuration
CORS_ORIGIN=*

# Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Email Configuration (SendGrid example)
EMAIL_PROVIDER=sendgrid
EMAIL_API_KEY=your_sendgrid_api_key
EMAIL_FROM=noreply@pattyshack.com

# SMS Configuration (Twilio example)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# IoT Sensor Configuration
IOT_PROVIDER=monnit
IOT_API_KEY=your_iot_api_key
IOT_GATEWAY_ID=your_gateway_id

# POS Integration
POS_PROVIDER=toast
POS_API_KEY=your_pos_api_key
POS_LOCATION_ID=your_location_id

# Monitoring
SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=info

# Redis (optional, for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Feature Flags
ENABLE_OFFLINE_MODE=true
ENABLE_AI_FEATURES=true
ENABLE_IOT_SENSORS=true

# Database Seeding (development only)
SEED_DATABASE=true

# Frontend Configuration
# These variables must also be configured in any managed hosting
# dashboards (e.g. Vercel or Railway) so the built frontend can reach
# the correct API instance.
VITE_API_URL=http://localhost:3000/api/v1
VITE_DEV_MODE=true
